<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="eu.basicairdata.graziano.gpslogger.FragmentRecordingControls"
    android:id="@+id/id_fragmentrecordingcontrols"
    android:background="@color/colorRecControlBackground"
    android:orientation="horizontal"
    android:weightSum="3"
    android:baselineAligned="false">


    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/id_TableLayout_Placemarks"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textColorRecControlSecondary"
            android:text="@string/placemarks"
            android:id="@+id/id_textView_PlacemarksLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorRecControlPrimary"
            android:id="@+id/id_textView_Placemarks"
            android:freezesText="true"
            android:textStyle="bold"
            android:text="0"
            android:gravity="center_horizontal"/>
    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/id_TableLayout_Empty"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        
    </TableLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/id_TableLayout_GeoPoints"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textColorRecControlSecondary"
            android:text="@string/trackpoints"
            android:id="@+id/id_textView_GeoPointsLabel"
            android:textSize="13sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorRecControlPrimary"
            android:id="@+id/id_textView_GeoPoints"
            android:freezesText="true"
            android:textStyle="bold"
            android:text="0"
            android:gravity="center_horizontal"/>

    </TableLayout>

</LinearLayout>
